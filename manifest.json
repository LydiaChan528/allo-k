{
	"manifest_version": 2,
	"name": "MadeCafe",
	"version": "0.0.1",
	"description": "MadeCafe @ TreeHacks 2019",

	"icons": {
		"16": "icons/TreeHacks-white-16.png",
		"48": "icons/TreeHacks-white-48.png",
		"128": "icons/TreeHacks-white-128.png"
	},

	"permissions": [
		"storage" // Allows access to chrome.storage API
	],

	"chrome_url_overrides": {
		"newtab": "src/newtab.html"
	},

	"options_ui": {
		"page": "src/options.html",
		"open_in_tab": false
	},

	"browser_action": {
		"default_icon": "icons/TreeHacks-white-19.png",
		"default_title": "MadeCafe",
		"default_popup": "src/popup.html"
	},

	"content_scripts": [{
		"matches": [
			"*://*/*"
		],
		"js": [
			"/src/content.js"
		],
		"run_at": "document_end"
	}]
}
