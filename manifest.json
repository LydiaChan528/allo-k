{
	"manifest_version": 2,
	"name": "MadeCafe",
	"version": "1.0",
	"description": "MadeCafe @ TreeHacks 2019",

	// replace with our graphics
	"icons": {
		"16": "icons/TreeHacks-white-16.png",
		"48": "icons/TreeHacks-white-48.png",
		"128": "icons/TreeHacks-white-128.png"
	},

	"permissions": [
		"storage",
		"notifications"
	],

	"background": {
		"scripts": ["src/data.js", "src/background.js"]
	},

	"options_page": "src/options.html",

	// replace with graphics
	"browser_action": {
		"default_icon": "icons/TreeHacks-white-19.png",
		"default_title": "MadeCafe",
		"default_popup": "src/popup.html"
	},

	"content_scripts": [{
		"matches": [ "*://*/*" ],
		"js": [ "/src/content.js" ],
		"run_at": "document_end"
	}]
}
